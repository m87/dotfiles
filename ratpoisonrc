

bind c exec urxvt
bind Escape kill
escape Menu

definekey top XF86AudioLowerVolume exec amixer set Master 5%- && ratpoison -c "echo $(amixer get Master | grep % | tr " " "\t" | cut -f6)"
definekey top XF86AudioRaiseVolume exec amixer set Master 5%+  && ratpoison -c "echo $(amixer get Master | grep % | tr " " "\t" | cut -f6)"
definekey top XF86AudioMute exec amixer set Master toggle  && ratpoison -c "echo $(amixer get Master | grep % | tr " " "\t" | cut -f8)"

exec rpws -i
exec /usr/bin/rpws init 6 -k

definekey top s-Menu exec urxvt
definekey top s-w exec dwb
definekey top s-e exec urxvt -e vim
definekey top s-f exec urxvt -e ranger

definekey top s-b exec ratpoison -c "echo $(acpi) :: $(ratpoison -c "time")"
definekey top s-c exec ratpoison -c "echo $(cal)"

definekey top s-z prev
definekey top s-x next
definekey top s-Left focusleft
definekey top s-Down focusdown
definekey top s-Up focusup
definekey top s-Right focusright
definekey top s-r remove
definekey top s-q only

bind v vsplit 
bind h hsplit
startup_message off

definekey top C-s-Left exchangeleft
definekey top C-s-Down exchangedown
definekey top C-s-Up exchangeup
definekey top C-s-Right exchangeright
